class Solution {
    public String addBinary(String a, String b) {
               int aux = 0;
        String output = "";

        int i = a.length();
        int j = b.length();

        while(i > 0 || j > 0){
            i --;
            j --;

            char charA;
            if(i >= 0){
                charA = a.charAt(i);
            } else {
                charA = '0';
            }
            char charB;
            if(j >= 0){
                charB = b.charAt(j);
            } else {
                charB = '0';
            }

            if(charA == '0' && charB == '0'){
                if(aux == 0){
                    output = "0" + output ;
                } else {
                    output = "1" + output;
                    aux = 0;
                }
            } else if(charA == '1' && charB == '0'){
                if(aux == 0){
                    output = "1" + output;
                } else {
                    output = "0" + output;
                    aux = 1;
                }
            } else if(charA == '0' && charB == '1'){
                if(aux == 0){
                    output = "1" + output;
                } else {
                    output = "0" + output;
                    aux = 1;
                }
            } else {
                if(aux == 0){
                    output =  "0" + output;
                    aux = 1;
                } else {
                    output = "1" + output;
                }
            }

        }

        if(aux == 1){
            output = "1" + output;
        }
            
        return  output;
    }
}
